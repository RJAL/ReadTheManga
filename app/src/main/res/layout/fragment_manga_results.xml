<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ruilopes.readthemanga.MangaResults">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/star_big_on"
        android:id="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTitle"
        android:layout_toRightOf="@+id/imageView3"
        android:textStyle="bold"/>

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStatus"
        android:layout_below="@+id/textViewTitle"
        android:layout_toRightOf="@+id/imageView3"
        android:textStyle="bold" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewScore"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_below="@+id/textViewStatus"
        android:textStyle="bold" />

    <Button
        android:text="Favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="23dp"
        android:id="@+id/buttonFavorite"
        android:layout_below="@+id/textViewScore"
        android:layout_toRightOf="@+id/imageView3"/>

    <Spinner
        android:id="@+id/spinnerStatus"
        android:layout_below="@+id/buttonFavorite"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Save"
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="23dp"
        android:layout_below="@+id/spinnerStatus"
        android:layout_toRightOf="@+id/imageView3"/>

    <TextView
        android:text="Sinopse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSinopse"
        android:layout_below="@+id/imageView3"
        android:textStyle="bold"
        android:height="400dp"
        android:width="400dp"/>

</RelativeLayout>
